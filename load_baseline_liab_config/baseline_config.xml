<?xml version="1.0"?>
<config version="9.0.0" urldb="paloaltonetworks">
  <mgt-config>
    <users>
      <entry name="{{ TARGET_USERNAME }}">
        <permissions>
          <role-based>
            <superuser>yes</superuser>
          </role-based>
        </permissions>
        <phash>{{ TARGET_PASSWORD | md5_hash }}</phash>
      </entry>
    </users>
  </mgt-config>
  <shared>
    <application/>
    <application-group/>
    <service/>
    <service-group/>
    <botnet/>
    <content-preview>
      <application/>
      <application-type>
        <category/>
        <technology/>
      </application-type>
    </content-preview>
  </shared>
  <devices>
    <entry name="localhost.localdomain">
      <network>
        <interface>
          <ethernet/>
        </interface>
        <profiles>
          <monitor-profile/>
        </profiles>
        <virtual-router>
          <entry name="default">
            <protocol>
              <bgp>
                <enable>no</enable>
                <dampening-profile>
                  <entry name="default">
                    <cutoff>1.25</cutoff>
                    <reuse>0.5</reuse>
                    <max-hold-time>900</max-hold-time>
                    <decay-half-life-reachable>300</decay-half-life-reachable>
                    <decay-half-life-unreachable>900</decay-half-life-unreachable>
                    <enable>yes</enable>
                  </entry>
                </dampening-profile>
              </bgp>
            </protocol>
          </entry>
        </virtual-router>
      </network>
      <deviceconfig>
        <system>
          <update-server>updates.paloaltonetworks.com</update-server>
          <service>
            <disable-telnet>yes</disable-telnet>
            <disable-http>yes</disable-http>
          </service>
          <hostname>{{ hostname }}</hostname>
          <ip-address>{{ TARGET_IP }}</ip-address>
          <netmask>255.255.255.0</netmask>
          <default-gateway>192.168.55.2</default-gateway>
          <dns-setting>
            <servers>
              <primary>{{ DNS_1 }}</primary>
              <secondary>{{ DNS_2 }}</secondary>
            </servers>
          </dns-setting>
        </system>
        <setting>
          <management>
            <hostname-type-in-syslog>FQDN</hostname-type-in-syslog>
          </management>
          <auto-mac-detect>yes</auto-mac-detect>
        </setting>
      </deviceconfig>
      <vsys>
        <entry name="vsys1">
          <application/>
          <application-group/>
          <zone/>
          <service/>
          <service-group/>
          <schedule/>
          <rulebase/>
        </entry>
      </vsys>
    </entry>
  </devices>
</config>
